<h1>It's Burger Time!</h1>

<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>Burgers Ready to Eat!</h2>
      <div class="row">
        <div class="col-12">
          <div class="burgerTop">
          </div>
        </div>
      </div>
      <div class="row">

        <div class="col-12">
          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
              {{this.name}}
              <br>

              <button class="change-devoured" data-id="{{this.id}}" data-newdevoured="true">
                {{#if this.devoured}}GIVE ME ANOTHER!{{else}}DEVOUR IT!{{/if}}
              </button>

              <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="burgerBottom"></div>
        </div>
      </div>
    </div>
    <div class="col-4">

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>


        <button type="submit">Add burger</button>
      </form>
    </div>
    <div class="col-4">

      <h2>Burgers You Ate!</h2>

      <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
              {{this.name}}
              <br>

              <button class="change-devoured" data-id="{{this.id}}" data-newdevoured="false">
                {{#if this.devoured}}GIVE ME ANOTHER!{{else}}DEVOUR IT!{{/if}}
              </button>

              <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
            </li>
            {{/if}}
            {{/each}}
          </ul>
    </div>

  </div>

</div>